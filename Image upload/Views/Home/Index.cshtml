@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@*<div class="text-md-center">
    <h1 class="display-4">@</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>*@
<div class="container"> 
    <div class="card-deck">
        @foreach (var movie in Model)
        {
                var posterPath = "~/images/" + movie.PhotoPath ?? "No Poster.jpg";

        <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header">
                <h5>@movie.Title</h5>
            </div>
            @*style="object-fit: contain; height: 100%; width: 100%;"*@
            @*<img class="card-img-top" style="height:200px;width:200px" src="~/images/No poster.jpg" asp-append-version="true" />*@
            <img class="imageTumbnail rounded " src="@posterPath" asp-append-version="true" alt="" />



            <div class="card-footer">
                @*<a asp-controller="home" asp-action="details" asp-route-id=""></a>*@
                <a asp-controller="home" asp-action="details" asp-route-id=@movie.MovieId class="btn btn-primary m-1">view</a>
                <a asp-controller="home" asp-action="edit"  asp-route-id=@movie.MovieId class="btn btn-primary m-1">edit</a>
                <a asp-controller="home" asp-action="delete"  asp-route-id=@movie.MovieId class="btn btn-danger m-1">delete</a>
            </div>

        </div>
        }

    </div>
    <div style="margin-bottom:20em"></div>

</div>
